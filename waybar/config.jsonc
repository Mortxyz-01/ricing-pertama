{
    "layer": "top",
    "position": "top",
    "margin-top": 10,
    "margin-left": 10,
    "margin-right": 10,
    "height": 34, 
    "spacing": 5, 

    // --- URUTAN MODUL ---
    "modules-left": ["custom/logo", "hyprland/workspaces", "hyprland/window"],
    "modules-center": ["clock"],
    "modules-right": ["group/hardware", "group/utils", "custom/notification", "custom/power"],

    // --- LOGO (Pemanis di kiri) ---
    "custom/logo": {
        "format": "ÔåÉ",
        "tooltip": false
    },

    // --- GRUP HARDWARE (Disatukan jadi satu kapsul) ---
    "group/hardware": {
        "orientation": "horizontal",
        "modules": ["cpu", "custom/gpu", "memory"]
    },
    
    // --- GRUP UTILS (Disatukan jadi satu kapsul) ---
    "group/utils": {
        "orientation": "horizontal",
        "modules": ["network", "bluetooth", "pulseaudio", "battery"]
    },

    // --- WORKSPACES ---
    "hyprland/workspaces": {
        "disable-scroll": true,
        "format": "{icon}",
        "persistent-workspaces": {
            "1": [], "2": [], "3": [], "4": [], "5": []
        },
        "format-icons": {
            "1": "‰∏Ä", "2": "‰∫å", "3": "‰∏â", "4": "Âõõ", "5": "‰∫î",
            "default": "ÔÑå", 
            "active": "ÔÜí", 
            "urgent": "ÔÅ™"
        }
    },
    
    "hyprland/window": { 
        "max-length": 30,
        "rewrite": {
            "(.*) - Mozilla Firefox": "üåé Firefox",
            "(.*) - Visual Studio Code": "üíª VSCode",
            "(.*) - Kitty": "ÔÑ† Terminal",
            "^$": "Desktop"
        }
    },

    // --- HARDWARE MONITORS ---
    "cpu": { 
        "format": "Ôíº {usage}%", 
        "tooltip": false,
        "interval": 2
    },

    "custom/gpu": {
        // Command ini khusus NVIDIA (Lebih akurat buat ASUS TUF)
        "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
        "format": "Û∞¢Æ {}%",
        "return-type": "",
        "interval": 3,
        "tooltip": false
    },

    "memory": { "format": "ÓøÖ {percentage}%" },

    // --- CLOCK ---
    "clock": {
        "format": "{:%H:%M} ÔÄó ",
        "format-alt": "{:%A, %d %B} ÔÅ≥ ",
        "tooltip-format": "<tt><small>{calendar}</small></tt>"
    },

    // --- UTILS ---
    "bluetooth": {
        "format": "Ôäî",
        "format-connected": "Ôäî",
        "tooltip-format": "{device_alias}",
        "on-click": "blueman-manager"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Óª®",
        "format-icons": { "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"] },
        "on-click": "pavucontrol"
    },

    "network": {
        "format-wifi": "Ôá´ ",
        "format-ethernet": "Ôûñ ",
        "format-disconnected": "‚ö† "
    },

    "battery": {
        "states": { "warning": 30, "critical": 15 },
        "format": "{icon} {capacity}%",
        "format-charging": "ÔÉß {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='#ff5555'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='#ff5555'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='#ff5555'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='#ff5555'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
